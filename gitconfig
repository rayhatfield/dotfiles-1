[user]
	name = Ray Hatfield
	email = ray.hatfield@gmail.com
[includeIf "gitdir:~/projects/waybetter/"]
    path = ~/.dotfiles/gitconfig-waybetter
[core]
	excludesfile = ~/.dotfiles/gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = simple
[commit]
	template = ~/.dotfiles/gitcommit_template
[pull]
	rebase = true
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	markEmptyLines = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[rebase]
	autostash = true
[init]
	defaultBranch = main
